<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/School</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1234</property>

        <mapping class="hibernate.entities.Instructor"/>
        <mapping class="hibernate.entities.Courses"/>
        <mapping class="hibernate.entities.Students"/>
        <mapping class="hibernate.entities.InstructorDetails"/>
    </session-factory>
</hibernate-configuration>